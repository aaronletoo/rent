<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.whut.rentManagement.business.contract.mapper.RemoveMapper">
    <sql id="Remove_fields">
          ID,CONTRACTID,REMOVEDEVICEID,REMOVEMAN,REMOVESTATUS,REMOVETIME,APPID
    </sql>
    <resultMap id="RemoveResultMap" type="Remove">
        <id property="id" column="ID" />
        <result property="contractId" column="CONTRACTID"/>
        <result property="removeDeviceId" column="REMOVEDEVICEID"/>
        <result property="removeMan" column="REMOVEMAN"/>
        <result property="removeTime" column="REMOVETIME"/>
        <result property="removeStatus" column="REMOVESTATUS"/>
        <result property="appId" column="APPID"/>
    </resultMap>
    <insert id="add" parameterType="Remove"  keyProperty="id"
            useGeneratedKeys="true">

        INSERT INTO
        remove(
        <include refid="Remove_fields" />
        )
        VALUES (#{id}, #{contractId},#{removeDeviceId},#{removeMan},#{removeTime},#{removeStatus},#{appId});
        <selectKey resultType="long" keyProperty="id">
            select
            LAST_INSERT_ID() as id
        </selectKey>
    </insert>
    <select id="getListByAppId" parameterType="java.lang.Long" resultMap="RemoveResultMap">
        select
        <include refid="Remove_fields" />
        from remove
        where APPID=#{appId}
    </select>
    <update id="update" parameterType="Remove">
        UPDATE remove
        <set>
            <if test="contractId!=null"> CONTRACTID=#{contractId},</if>
            <if test="removeDeviceId!=null"> REMOVEDEVICEID=#{removeDeviceId},</if>
            <if test="removeMan!=null"> REMOVEMAN=#{removeMan},</if>
            <if test="removeTime!=null"> REMOVETIME=#{removeTime},</if>
            <if test="removeStatus!=null"> REMOVESTATUS=#{removeStatus},</if>

        </set>
        WHERE ID=#{id}
    </update>

    <delete id="delete" parameterType="Remove">
        DELETE FROM remove
        <where>
            <if test="id!=null">ID=#{id}</if>
        </where>
    </delete>
    <select id="getRemoveDeviceIdById" parameterType="java.lang.Long" resultType="java.lang.Long">
        select
       id
        from remove
        where REMOVEDEVICEID=#{removeDeviceId}
    </select>

    <select id="getRemoveList" parameterType="map" resultType="map">
        select remove.*,contract.name,contract.customerName
        from remove,contract,device
        where remove.contractId=contract.id and remove.removeDeviceId=device.id
        <if test="appId!=null"> AND remove.APPID=#{appId}</if>
        <if test="user!=null">AND remove.removeMan like CONCAT('%',#{user},'%') </if>
        <if test="device!=null">AND device.name like CONCAT('%',#{device},'%')</if>
        <if test="startTime!=null"><![CDATA[ AND remove.removeTime>=#{startTime}]]></if>
        <if test="endTime!=null"><![CDATA[ AND remove.removeTime<=#{endTime} ]]> </if>
    </select>
</mapper>